@using MvcCv.Models.Entity
@model List<TblSocialMedia>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Sosyal Media Hesap Listem</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <button class="btn btn-info" data-toggle="modal" data-target="#Modal1">Yeni Sosyal Media Hesabı ekle</button>
                                <br />
                                <br />
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>Sosyal Media</th>
                                            <th>Durum</th>
                                            <th>Düzenle</th>
                                            <th>Sil</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                       
                                        {
                                        <tr>
                                            <td>@item.ID</td>
                                            <td>@item.Name</td>
                                            @if (item.Durum == true)
                                            {
                                                <td>Aktif</td>
                                            }
                                            else {
                                            <td>Pasif</td>
                                            }
                                            <td>
                                                <a class="btn btn-info btn-sm" href="/SocialMedia/SocialMediaCall/@item.ID/">
                                                    <i class="fas fa-pencil-alt"></i>
                                                    Düzenle
                                                </a>
                                            </td>
                                            <td>
                                                <a class="btn btn-danger btn-sm" href="/SocialMedia/SocialMediaDelete/@item.ID/">
                                                    <i class="fas fa-trash"></i>
                                                    Sil
                                                </a>
                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <div class="modal" id="Modal1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h2 class="modal-title">Sosyal Medaya Hesabı Ekleme Paneli</h2>
                    </div>
                    <form action="/SocialMedia/SocialMediaAdd" method="post">
                        <div class="modal-body">
                            <label>Sosyal Media İsmi</label>
                            <input type="text" name="Name" class="form-control" />
                            <br />
                            <label>Sosyal Media Linki</label>
                            <input type="text" name="Link" class="form-control" />
                            <br />
                            <label>İkon Degeri</label>
                            <input type="text" name="Ikon" class="form-control" />
                            <br />
                            <button class="btn btn-danger">Kaydet</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>