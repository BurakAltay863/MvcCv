@using MvcCv.Models.Entity
@model List<TblCertificate>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{ 
    string color = "";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
              <!-- /.col -->
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header p-2">

                            </div><!-- /.card-header -->

                            <div class="card-body">
                               
                                    <div class="tab-pane" id="timeline">
                                        <!-- The timeline -->
                                        <div class="timeline timeline-inverse">
                                            <!-- timeline time label -->
                                            @foreach (var x in Model)
                                            {
                                                if(x.ID % 2 == 0)
                                                {
                                                    color = "btn btn-warning";
                                                }
                                                else
                                                {
                                                    color = "btn btn-danger";
                                                }
                                                <div class="time-label">
                                                    <a href="/Certificate/CertificateCall/@x.ID" class="@color">
                                                        <span class="@color">
                                                            @x.Date
                                                        </span>
                                                    </a>
                                                    <span class="bg-red btn"><a href="/Certificate/CertificateDelete/@x.ID" class="fa fa-trash"></a></span>
                                                </div>
                                                <!-- /.timeline-label -->
                                                <!-- timeline item -->
                                                <div>
                                                    @*<i class="fas fa-comment bg-primary"></i>*@
                                                    <div class="timeline-item">
                                                        <div class="timeline-body">
                                                            @x.Descreption
                                                        </div>
                                                        @*<div class="timeline-footer">
                                                            <a href="#" class="btn btn-primary btn-sm">Düzenle </a>
                                                            <a href="#" class="btn btn-danger btn-sm">Sil</a>
                                                        </div>*@
                                                    </div>
                                                </div>
                                            }
                                            </div>
                                        <a href="/Certificate/CertificateAdd" class="btn btn-info">Yeni Sertifika Girişi</a>
                                    </div>
                                </div>
                        </div><!-- /.card-body -->
                    </div>           
                </div>
        </div>
    </section>
</body>
</html>