@using MvcCv.Models.Entity
@model List<TblSkills>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{ 
    string color = "";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Yetenek Listem</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <a href="/Skill/SkillAdd" class="btn btn-info">Yeni Yetenek ekle</a>
                                <br />
                                <br />
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>Yetenek</th>
                                            <th>Derece</th>
                                            <th style="width: 40px">Oran</th>
                                            <th>Düzenle</th>
                                            <th>Sil</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)

                                        {
                                            if (item.Ratio <= 25)

                                            {

                                                color = "danger";
                                            }

                                            else if (item.Ratio <= 50)

                                            {
                                                color = "warning";
                                            }

                                            else if (item.Ratio <= 75)

                                            {

                                                color = "success";

                                            }
                                            else
                                            {
                                                color = "primary";
                                            }

                                            <tr>
                                                <td>@item.ID</td>
                                                <td>@item.Skill</td>
                                                <td>

                                                    <div class="progress progress-xs">
                                                        <div class="progress-bar bg-@color" style="width: @item.Ratio%"></div>
                                                    </div>

                                                </td>

                                                <td><span class="badge bg-@color">@item.Ratio%</span></td>
                                                <td>
                                                 <a class="btn btn-info btn-sm" href="/Skill/SkillCall/@item.ID/">
                                                     <i class="fas fa-pencil-alt"></i>
                                                     Düzenle
                                                 </a>
                                                </td>
                                                <td>
                                                    <a class="btn btn-danger btn-sm" href="/Skill/SkillDelete/@item.ID/">
                                                        <i class="fas fa-trash"></i>
                                                        Sil
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
    </div>
</body>
</html>